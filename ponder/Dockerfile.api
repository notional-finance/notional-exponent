FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

ENV NODE_ENV=production

# Expose port (Cloud Run will set PORT env var)
EXPOSE 8080

# Start the API service (serve only, no indexing)
CMD ["sh", "-c", "npx ponder serve -H 0.0.0.0 -p ${PORT:-8080} --schema=${DATABASE_SCHEMA}"]

